  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ESNext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
